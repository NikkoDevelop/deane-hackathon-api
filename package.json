{
  "name": "autumn_2022_server",
  "version": "1.0.0",
  "main": "src/server.ts",
  "repository": "https://gitlab.com/my_hackathons/autumn_2022_server.git",
  "license": "MIT",
  "scripts": {
    "start": "node dist/server.js",
    "lint": "./node_modules/.bin/eslint . --ext .ts",
    "lint:fix": "./node_modules/.bin/eslint . --ext .ts --fix",
    "dev": "ts-node-dev --transpile-only --no-notify ./src/server.ts",
    "generate:nexus": "GENERATE_NEXUS=true NODE_ENV=development ts-node --transpile-only src/graphql/schema",
    "generate:prisma": "prisma generate",
    "migrate:up": "npx prisma migrate deploy",
    "migrate:dev": "npx prisma migrate dev",
    "precommit-check": "yarn -s migrate:up && yarn generate:prisma && yarn generate:nexus && tsc"
  },
  "devDependencies": {
    "@atomix/eslint-config": "^8.0.0",
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.2",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.25.0",
    "eslint-config-standart": "^0.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.0",
    "eslint-plugin-sonarjs": "^0.16.0",
    "eslint-plugin-standard": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@nexus/schema": "^0.20.1",
    "@prisma/client": "^4.5.0",
    "@types/cookie-parser": "^1.4.3",
    "apollo-datasource": "^3.3.2",
    "apollo-server-core": "^3.10.3",
    "apollo-server-express": "^3.10.3",
    "aws-sdk": "^2.1237.0",
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cuid": "^2.1.8",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-middleware": "^6.1.33",
    "graphql-shield": "^7.6.3",
    "graphql-tag": "^2.12.6",
    "graphql-tools": "^8.3.6",
    "isemail": "^3.2.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "log4js": "^6.7.0",
    "mime-types": "^2.1.35",
    "nexus": "^1.3.0",
    "nodemailer": "^6.8.0",
    "nodemailer-smtp-transport": "^2.7.4",
    "nodemon": "^2.0.20",
    "prisma": "^4.5.0",
    "ts-node-dev": "^2.0.0",
    "url-parse": "^1.5.10"
  }
